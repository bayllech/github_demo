<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>

    <include file="struts-account.xml"></include>
    <include file="struts-user.xml"></include>
    <!--修改默认后缀-->
    <constant name="struts.action.extension" value=","/>

    <package name="basePackage" extends="struts-default" abstract="true">
        <interceptors>
            <interceptor name="login" class="cn.bayllech.action.intercepter.MyInterceptor">
                <param name="namespace">/</param>
                <param name="actionNames">login,index</param>
            </interceptor>

            <interceptor-stack name="myStack">
                <interceptor-ref name="defaultStack"/>
                <interceptor-ref name="timer"/>
                <interceptor-ref name="login"/>
            </interceptor-stack>
        </interceptors>

        <default-interceptor-ref name="myStack"/>
        <global-results>
            <result name="login" type="redirectAction">
                <param name="actionName">index</param>
                <param name="namespace">/</param>
            </result>
        </global-results>
    </package>


</struts>