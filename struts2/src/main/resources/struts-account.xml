<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
    <package name="loginPackage" extends="basePackage">
        <action name="index" class="cn.bayllech.action.LoginAction">
            <result>/WEB-INF/views/login.jsp</result>
        </action>
        <action name="login" class="cn.bayllech.action.LoginAction" method="login">
            <result type="redirectAction">
                <param name="actionName">hello</param>
                <param name="namespace">/</param>
            </result>
            <result name="error" type="redirectAction">
                <param name="actionName">index</param>
                <param name="code">${code}</param>
            </result>
        </action>
    </package>
</struts>