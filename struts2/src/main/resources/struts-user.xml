<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>

    <package name="helloPackage" extends="basePackage">
        <action name="hello" class="cn.bayllech.action.HelloAction">
            <result>/WEB-INF/views/hello.jsp</result>
        </action>
        <action name="add" class="cn.bayllech.action.HelloAction" method="add">
            <result>/WEB-INF/views/hello.jsp</result>
        </action>
        <action name="list" class="cn.bayllech.action.HelloAction" method="list">
            <result type="redirectAction">
                <param name="namespace">/user</param>
                <param name="actionName">new</param>
                <param name="code">${code}</param>
            </result>
            <!--<result type="chain">
                <param name="namespace">/user</param>
                <param name="actionName">new</param>
            </result>-->
        </action>
    </package>

    <package name="userPackage" namespace="/user" extends="basePackage">
        <action name="new" class="cn.bayllech.action.UserAction" method="newUser">
            <result>/WEB-INF/views/new.jsp</result>
        </action>
        <action name="save" class="cn.bayllech.action.UserAction" method="save">
            <result type="redirectAction">
                <param name="actionName">new</param>
            </result>
        </action>
    </package>
</struts>